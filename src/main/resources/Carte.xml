<?xml version="1.0" encoding="UTF-8"?>
<entity-mappings xmlns="https://jakarta.ee/xml/ns/persistence/orm"
                 version="3.0">

    <entity class="com.ecommerce.metier.Carte">
        <table name="carte" schema="commerce" catalog=""/>
        <attributes>
            <id name="idcarte">
                <column name="idcarte" precision="10"/>
            </id>
            <basic name="numero">
                <column name="numero" length="16"/>
            </basic>
            <basic name="dateExpiration">
                <column name="dateExpiration" length="5"/>
            </basic>
            <basic name="crypto">
                <column name="crypto" precision="3"/>
            </basic>
        </attributes>
    </entity>
</entity-mappings>
